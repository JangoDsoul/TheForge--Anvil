<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--===== Anvil =====-->

  <ThingDef ParentName="JDSForgeBenchBase">
    <defName>JDSAnvil</defName>
    <label>Anvil</label>
    <description>The Anvil made out of pure iron</description>
	<techLevel>Medieval</techLevel>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
    </statBases>
    <minifiedDef />
    <thingCategories Inherit="false" />
    <size>(1,1)</size>
    <costList>
      <Steel>200</Steel>
    </costList>
    <comps>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <recipes>
    </recipes>
    <graphicData>
      <texPath>Things/Building/TheForge_Anvil</texPath>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>JDSTheForgeKnows</li>
    </researchPrerequisites>
  </ThingDef>

	<!--===== WorkBench =====-->

  <ThingDef ParentName="JDSForgeBenchBase">
    <defName>JDSWorkBench</defName>
    <label>The WorkBench</label>
    <description>Industrial era work bench can craft many things</description>
	<techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <minifiedDef />
    <thingCategories Inherit="false" />
    <size>(3,1)</size>
    <costList>
      <Steel>160</Steel>
      <ComponentIndustrial>12</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>250</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <recipes>
    </recipes>
    <graphicData>
      <texPath>Things/Building/TheForge_Workbench</texPath>
      <drawSize>(3.5,1.5)</drawSize>
    </graphicData>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>JDSTheForgeKnows</li>
    </researchPrerequisites>
  </ThingDef>

